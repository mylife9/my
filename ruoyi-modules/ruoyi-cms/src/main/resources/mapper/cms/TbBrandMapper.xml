<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.TbBrandMapper">
    
    <resultMap type="com.ruoyi.cms.domain.TbBrand" id="TbBrandResult">
        <result property="id"    column="id"    />
        <result property="brandName"    column="brand_name"    />
        <result property="logo"    column="logo"    />
        <result property="firstChar"    column="first_char"    />
        <result property="createBy"    column="create_by"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTbBrandVo">
        select id, brand_name, logo, first_char, create_by, status, create_time, update_time from tb_brand
    </sql>

    <select id="selectTbBrandList" parameterType="com.ruoyi.cms.domain.TbBrand" resultMap="TbBrandResult">
        <include refid="selectTbBrandVo"/>
        <where>  
            <if test="brandName != null  and brandName != ''"> and brand_name like concat('%', #{brandName}, '%')</if>
            <if test="firstChar != null  and firstChar != ''"> and first_char = #{firstChar}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectTbBrandById" parameterType="Long" resultMap="TbBrandResult">
        <include refid="selectTbBrandVo"/>
        where id = #{id}
    </select>

    <insert id="insertTbBrand" parameterType="com.ruoyi.cms.domain.TbBrand" useGeneratedKeys="true" keyProperty="id">
        insert into tb_brand
        <trim prefix="(" suffix=")" suffixOverrides=",">
            status,
            <if test="brandName != null">brand_name,</if>
            <if test="logo != null">logo,</if>
            <if test="firstChar != null">first_char,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            0,
            <if test="brandName != null">#{brandName},</if>
            <if test="logo != null">#{logo},</if>
            <if test="firstChar != null">#{firstChar},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTbBrand" parameterType="com.ruoyi.cms.domain.TbBrand">
        update tb_brand
        <trim prefix="SET" suffixOverrides=",">
            <if test="brandName != null">brand_name = #{brandName},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="firstChar != null">first_char = #{firstChar},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbBrandById" parameterType="Long">
        delete from tb_brand where id = #{id}
    </delete>

    <delete id="deleteTbBrandByIds" parameterType="String">
        delete from tb_brand where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>