<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.TbItemCatMapper">
    
    <resultMap type="com.ruoyi.cms.domain.TbItemCat" id="TbItemCatResult">
        <result property="id"    column="id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="name"    column="name"    />
        <result property="typeId"    column="type_id"    />
    </resultMap>

    <sql id="selectTbItemCatVo">
        select id, parent_id, name, type_id from tb_item_cat
    </sql>

    <select id="selectTbItemCatList" parameterType="com.ruoyi.cms.domain.TbItemCat" resultMap="TbItemCatResult">
        <include refid="selectTbItemCatVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="parentId != null"> and parent_id = #{parentId} </if>

        </where>
    </select>
    
    <select id="selectTbItemCatById" parameterType="Long" resultMap="TbItemCatResult">
        <include refid="selectTbItemCatVo"/>
        where id = #{id}
    </select>

    <insert id="insertTbItemCat" parameterType="com.ruoyi.cms.domain.TbItemCat" useGeneratedKeys="true" keyProperty="id">
        insert into tb_item_cat
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="name != null">name,</if>
            <if test="typeId != null">type_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="name != null">#{name},</if>
            <if test="typeId != null">#{typeId},</if>
         </trim>
    </insert>

    <update id="updateTbItemCat" parameterType="com.ruoyi.cms.domain.TbItemCat">
        update tb_item_cat
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="typeId != null">type_id = #{typeId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbItemCatById" parameterType="Long">
        delete from tb_item_cat where id = #{id}
    </delete>

    <delete id="deleteTbItemCatByIds" parameterType="String">
        delete from tb_item_cat where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>