<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.brand.mapper.CarBrandMapper">
    
    <resultMap type="com.ruoyi.brand.domain.CarBrand" id="CarBrandResult">
        <result property="id"    column="id"    />
        <result property="carBrandName"    column="car_brand_name"    />
        <result property="pid"    column="pid"    />
    </resultMap>

    <sql id="selectCarBrandVo">
        select id, car_brand_name, pid from tb_car_brand
    </sql>

    <select id="selectCarBrandList" parameterType="com.ruoyi.brand.domain.CarBrand" resultMap="CarBrandResult">
        <include refid="selectCarBrandVo"/>
        <where>  
            <if test="carBrandName != null  and carBrandName != ''"> and car_brand_name like concat('%', #{carBrandName}, '%')</if>
        </where>
    </select>
    
    <select id="selectCarBrandById" parameterType="Long" resultMap="CarBrandResult">
        <include refid="selectCarBrandVo"/>
        where id = #{id}
    </select>
    <select id="selectBrandOne" resultType="com.ruoyi.brand.domain.CarBrand">
        select  * from tb_car_brand where pid = 0
    </select>

    <insert id="insertCarBrand" parameterType="com.ruoyi.brand.domain.CarBrand" useGeneratedKeys="true" keyProperty="id">
        insert into tb_car_brand
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carBrandName != null">car_brand_name,</if>
            <if test="pid != null">pid,</if>
         </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carBrandName != null">#{carBrandName},</if>
            <if test="pid != null">#{pid},</if>
         </trim>
    </insert>

    <update id="updateCarBrand" parameterType="com.ruoyi.brand.domain.CarBrand">
        update tb_car_brand
        <trim prefix="SET" suffixOverrides=",">
            <if test="carBrandName != null">car_brand_name = #{carBrandName},</if>
            <if test="pid != null">pid = #{pid},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCarBrandById" parameterType="Long">
        delete from tb_car_brand where id = #{id}
    </delete>

    <delete id="deleteCarBrandByIds" parameterType="String">
        delete from tb_car_brand where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>