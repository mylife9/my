<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.model.mapper.CarModelMapper">
    
    <resultMap type="com.ruoyi.model.domain.CarModel" id="CarModelResult">
        <result property="id"    column="id"    />
        <result property="model"    column="model"    />
        <result property="engineDisplace"    column="engine_displace"    />
        <result property="fueType"    column="fue_type"    />
        <result property="vehicleType"    column="vehicle_type"    />
        <result property="num"    column="num"    />
    </resultMap>

    <sql id="selectCarModelVo">
        select id, model, engine_displace, fue_type, vehicle_type, num from car_model
    </sql>

    <select id="selectCarModelList" parameterType="com.ruoyi.model.domain.CarModel" resultMap="CarModelResult">
        <include refid="selectCarModelVo"/>
        <where>  
            <if test="model != null  and model != ''"> and model = #{model}</if>
            <if test="fueType != null  and fueType != ''"> and fue_type = #{fueType}</if>
            <if test="vehicleType != null  and vehicleType != ''"> and vehicle_type = #{vehicleType}</if>
        </where>
    </select>
    
    <select id="selectCarModelById" parameterType="Long" resultMap="CarModelResult">
        <include refid="selectCarModelVo"/>
        where id = #{id}
    </select>
    <select id="brandList" resultType="com.ruoyi.brand.domain.CarBrand">
        select * from tb_car_brand where pid != 0
    </select>

    <insert id="insertCarModel" parameterType="com.ruoyi.model.domain.CarModel" useGeneratedKeys="true" keyProperty="id">
        insert into car_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="model != null">model,</if>
            <if test="engineDisplace != null">engine_displace,</if>
            <if test="fueType != null">fue_type,</if>
            <if test="vehicleType != null">vehicle_type,</if>
            <if test="num != null">num,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="model != null">#{model},</if>
            <if test="engineDisplace != null">#{engineDisplace},</if>
            <if test="fueType != null">#{fueType},</if>
            <if test="vehicleType != null">#{vehicleType},</if>
            <if test="num != null">#{num},</if>
         </trim>
    </insert>

    <update id="updateCarModel" parameterType="com.ruoyi.model.domain.CarModel">
        update car_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="model != null">model = #{model},</if>
            <if test="engineDisplace != null">engine_displace = #{engineDisplace},</if>
            <if test="fueType != null">fue_type = #{fueType},</if>
            <if test="vehicleType != null">vehicle_type = #{vehicleType},</if>
            <if test="num != null">num = #{num},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCarModelById" parameterType="Long">
        delete from car_model where id = #{id}
    </delete>

    <delete id="deleteCarModelByIds" parameterType="String">
        delete from car_model where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>